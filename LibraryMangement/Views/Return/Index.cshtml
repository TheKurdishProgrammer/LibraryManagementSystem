@using LibraryMangement.Data.Models
@model IEnumerable<LibraryMangement.Data.Models.Book>

<table class="table table-striped table-hover">
    <thead>
    <tr>
    
        <th>ID</th>
        <th>Book Name</th>
        <th>Auther Name</th>
        <th>Borrow Name</th>
        <th>Return Book</th>
    </tr>
    </thead>
    <tbody>
    
    @foreach (var book in Model)
    {
        <tr>
            
            <td>@book.BookId</td>
            <td>@book.BookName</td>
            <td>@book.Auther.AutherName</td>
            <td>@book.Borrower.CustomerName</td>
            <td><a class="btn btn-success" asp-controller="Return" asp-action="ReturnBook" asp-route-id="@book.BookId" >Return</a></td>
        </tr>
        
    }
    
    </tbody>
    
</table>