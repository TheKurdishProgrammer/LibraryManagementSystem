@model LibraryMangement.ViewModels.LendViewModel
<div class="row orderForm">

    <form asp-controller="Lend" asp-action="LendBook" method="post" class="form-horizontal" role="form">

        <h3 class="col-md-offset-2"> Lending @Model.Book.BookName</h3>

        <div class="form-group">
            @Html.HiddenFor(lendVm => Model.Book.BookId)

            <label asp-for="Book.Borrower" class="col-md-2 control-label"></label>
            <div class="col-md-6">
                @Html.DropDownListFor(vm => vm.Book.BorrowerId,
                    new SelectList(Model.Customers.Select(customer => new
                    {
                        Value = customer
                            .CustomerId,
                        Text = customer.CustomerName
                    }), "Value", "Text"), htmlAttributes: new {@class = "form-control border-input"}
                    )
            </div>
            <a class="btn btn-success" asp-controller="Customer" asp-action="Create">Create New Customer</a>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2">
                <input class="btn btn-default" type="submit" value="Return" asp-controller="Lend" asp-action="Index">

                <input class="btn btn-success" type="submit" value="Create"/>
            </div>
        </div>


    </form>


</div>