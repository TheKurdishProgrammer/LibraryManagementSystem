@using LibraryMangement.Data.Models
@model IEnumerable<LibraryMangement.Data.Models.Book>

<table class="table table-striped table-hover">

    <thead>
    <tr>
        <th>ID</th>
        <th>Book Name</th>
        <th>Author</th>
        <th>Lend a Book</th>
    </tr>
    </thead>
    <tbody>
    
    @foreach (var book in Model)
    {
        <tr>
            
            <td>@book.BookId</td>
            <td>@book.Auther.AutherName</td>
            <td>@book.BookName</td>

            <td><a class="btn btn-success" asp-controller="Lend" asp-action="LendBook" asp-route-id="@book.BookId">Lend</a></td>
            
            
            
        </tr>
        
        
        
    }
    
    
    </tbody>

</table>