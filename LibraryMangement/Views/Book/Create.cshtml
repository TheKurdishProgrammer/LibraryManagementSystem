@model LibraryMangement.ViewModels.BookViewModel
<div class="row orderForm">

    <form asp-controller="Book" asp-action="Create" method="post" class="form-horizontal" role="form">

        <h3 class="col-md-offset-2"> Create New Book</h3>

        <div class="form-group">
            <label asp-for="Book.Auther" class="col-md-2 control-label"></label>

            <div class="col-md-6">
                @Html.DropDownListFor(vm => vm.Book.AutherId,
                    new SelectList(Model.Authers.Select(auther => new
                    {
                        Value = auther
                            .AutherId,
                        Text = auther.AutherName
                    }), "Value", "Text"), htmlAttributes: new {@class = "form-control border-input"}
                    )
                <span asp-validation-for="Book.Auther" class="text-danger"></span>
            </div>
            <a class=" btn btn-success" asp-controller="Author" asp-action="Create" asp-route-from="1">Create New Author</a>

        </div>

        
        <div class="form-group">
            <label asp-for="Book.BookName" class="col-md-2 control-label"></label>
            <div class="col-md-6">
                <input asp-for="Book.BookName" class="form-control" placeholder="Enter Book Name"/>
                <span asp-validation-for="Book.BookName" class="text-danger"></span>
            </div>
        </div>
        
        <div class="form-group" >
        <div class="col-md-offset-2 col-md-2" >
            <input class="btn btn-default" type="submit" value="Return" asp-controller="Book" asp-action="Index"/>
            <input class="btn btn-success" type="submit" value="Create"/>
        </div>
        </div>
        

    </form>


</div>